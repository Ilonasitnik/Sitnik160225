<Window x:Class="Sitnik160225.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sitnik160225"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Заголовок -->
        <TextBlock Text="Täglicher Aufgabenplaner" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Календарь -->
        <Calendar x:Name="Calendar" Height="300" Width="400" MouseDoubleClick="Calendar_MouseDoubleClick"/>
    </StackPanel>
</Window>
